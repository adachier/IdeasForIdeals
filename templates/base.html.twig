<!DOCTYPE html>
<html>
    <head>
        {# BOOTSRAP #}
        <meta name="viewport" content="width=device-width, intial-scale=1">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

        {# FAVICON #}
        <link rel="apple-touch-icon" sizes="180x180" href="{{asset('images/favicon_io/apple-touch-icon.png')}}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{asset('images/favicon_io/favicon-32x32.png')}}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{asset('images/favicon_io/favicon-16x16.png')}}">
        <link rel="manifest" href="/site.webmanifest">

        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/css?family=Roboto|Spartan|display=swap" rel="stylesheet">
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    </head>
        {% endblock %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="font-family: 'Spartan', sans-serif;">
        <a class="navbar-brand" href="/"><img src="{{ asset('images/idea.png') }}"  style="width: 30px; height: 40px; margin-left: 10px;"alt=""><span class="ml-3">I for I</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <div class="dropdown">
                        <a class="dropdown-toggle nav-link" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="{{ asset('images/news.png') }}" style="width: 20px; height: 20px; margin-right: 10px;">
                            Categories
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        {% for category in categories %}
                            <a class="dropdown-item" href="{{path('categories', {'id': category.id})}}">{{category.nom}}</a>
                        {% endfor %}
                        </div>
                    </div>
                </li>
                <li class="nav-item">
                    {% if app.user %}
                        <a class="nav-link" href="{{ path('app_logout') }}"><img src="{{ asset('images/user.png') }}" style="width: 20px; height: 20px; margin-right: 10px;">Logout</a>
                    {% else %} 
                        <a class="nav-link" href="/login"><img src="{{ asset('images/user.png') }}" style="width: 20px; height: 20px; margin-right: 10px;">Log In</a>
                    {% endif %}
                </li>
                <li class="nav-item">
                    {% if app.user %}
                        <a class="nav-link" href="{{ path('app_profile') }}"><img src="{{ asset('images/user.png') }}" style="width: 20px; height: 20px; margin-right: 10px;">Profile</a>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_register') }}"><img src="{{ asset('images/user.png') }}" style="width: 20px; height: 20px; margin-right: 10px;">Sign Up</a>
                    {% endif %}
                </li>
            </ul>
        </div>
    </nav>
    {% block body %} {% endblock %}
    {% block footer %}
    <footer class="page-footer font-small bg-primary pt-5 text-light mt-5">
        <div class="container-fluid text-center text-md-left">
            <div class="row">
                <div class="col-md-6 mt-md-0 mt-3">
                    <h5 class="text-uppercase text-light">Ideas for Ideals</h5>
                    <a class="navbar-brand" href="/"><img src="{{ asset('images/idea.png') }}"  style="width: 30px; height: 40px; margin-left: 70px;"alt=""></a>
                </div>
                <hr class="clearfix w-100 d-md-none pb-3">
                <div class="col-md-3 mb-md-0 mb-3">
                    <h5 class="text-uppercase text-light">Users</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a class="text-light" href="/login">Log In</a>
                        </li>
                        <li>
                            <a class="text-light" href="{{ path('app_register') }}">Sign Up</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 mb-md-0 mb-3">
                    <h5 class="text-uppercase text-light">Categories</h5>
                    <ul class="list-unstyled">
                        {% for category in categories %}
                            <li>
                                <a class="text-light" href="{{path('categories', {'id': category.id})}}">{{category.nom}}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright text-center text-light py-3">© 2020 Aurélien Dachier
            <a class="text-light" href="https://mdbootstrap.com/"> ideasforideals.com</a>
            <a class="text-light"href="{{path('mentions')}}">Mentions Légales</a>
        </div>
    </footer>
    {% endblock %}
{% block javascripts %}
{% endblock %}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</html>
