{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="col-12 d-flex">
    <div class="col-6 mt-4 hide" style="height: 70vh; background-image:url('{{ asset('images/login.jpg') }}'); background-size: cover;">
    </div>
    <div class="col-6 d-flex m-auto justify-content-center flex-column grow">
        <h1 class="text-center mt-4">S'inscrire</h1>
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <button class="btn btn-success">S'inscrire</button>
                {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
